{
  "name": "procurement-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "clean": "node -e \"try{require('fs').rmSync('.next',{recursive:true,force:true});console.log('Cleaned .next');}catch(e){}\"",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "db:init": "tsx scripts/init-db.ts",
    "db:migrate-roles": "tsx scripts/migrate-roles-array.ts",
    "db:migrate-profiles": "tsx scripts/migrate-profile-name.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:migrate-request-options": "psql $DATABASE_URL -f sql/migrate-request-options.sql",
    "db:seed-request-options": "tsx scripts/seed-request-options.ts",
    "grant-super-admin": "tsx scripts/grant-super-admin.ts",
    "deploy": "npm run clean && npm ci && npm run build"
  },
  "dependencies": {
    "next": "14.2.18",
    "next-auth": "^4.24.10",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "undici": "^6.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.11.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
